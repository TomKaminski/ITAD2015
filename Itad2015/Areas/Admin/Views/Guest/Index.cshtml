<div ng-app="guestAdminApp">
    <div ng-controller="guestAdminCtrl as ctrl" ng-init="ctrl.init()">
        <div class="row">
            <div class="col-sm-8">
                <div class="form-group" style="padding: 25px 10px">
                    <div class="row" style="margin-bottom: 5px">
                        <label class="control-label col-md-4">Wyszukaj:</label>
                        <input type="text" class="form-control col-md-10" ng-model="ctrl.searchText" ng-change="ctrl.filterList() " />
                    </div>
                    <div class="row">
                        <label class="control-label col-md-4">Rozmiar strony:</label>
                        <input type="text" class="form-control col-md-8" ng-model="ctrl.pageSize" ng-change="ctrl.setPageSize(ctrl.pageSize)" />
                    </div>

                    <div class="checkbox col-md-8 col-md-offset-4">
                        <label>
                            <input type="checkbox" ng-model="ctrl.showCheckedIn" ng-change="ctrl.filterList()"> Pokazuj wszystkich
                        </label>
                    </div>

                </div>
            </div>
            <div class="col-sm-3">
                <h3 class="text-center">Aplikacja do rejestracji</h3>
                <p class="text-center">
                    Status: <span ng-if="ctrl.connectedToDevice == true" style="color: green">ONLINE</span>
                    <span ng-if="ctrl.connectedToDevice == false" style="color: red">OFFLINE &nbsp;<button class="btn btn-success">Połącz</button></span>
                </p>
                <div ng-if="ctrl.connectedToDevice == true">
                    <button class="btn btn-danger col-xs-12" ng-show="ctrl.deviceBlocked == false" ng-click="ctrl.blockDevice()">Zablokuj urządzenie</button>
                    <button class="btn btn-success col-xs-12" ng-show="ctrl.deviceBlocked == true" ng-click="ctrl.unblockDevice()">Odblokuj urządzenie</button>
                </div>
            </div>
        </div>

        <table class="table table-striped">
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Email
                </th>
                <th>
                    Rozmiar koszulki
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="item in ctrl.guestsList">
                <td>
                    <div>{{item.FirstName}}</div>
                </td>
                <td>
                    <div>{{item.LastName}}</div>
                </td>
                <td>
                    <div>{{item.Email}}</div>
                </td>
                <td>
                    <div>{{item.Size}}</div>
                </td>
                <td>
                    <div ng-if="item.IsCheckIn == true">
                        <button ng-click="ctrl.checkOut(item.Id)" class="btn btn-danger">Wypisz</button>
                    </div>
                    <div ng-if="item.IsCheckIn == false">
                        <button ng-click="ctrl.checkIn(item.Id)" class="btn btn-success">Wpisz</button>
                    </div>
                </td>
            </tr>
        </table>
        <nav>
            <ul class="pagination">
                <li>
                    <a href="#" aria-label="Previous" ng-click="ctrl.setPage(ctrl.currentPage-1)">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li ng-repeat="page in ctrl.tableOfPages" ng-class="{active: ctrl.currentPage==page}">
                    <a href="#" ng-click="ctrl.setPage($index+1)">{{page}}</a>
                </li>

                <li>
                    <a href="#" aria-label="Next" ng-click="ctrl.setPage(ctrl.currentPage+1)">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>

    @*Auto generated by signalR, nie usuwać*@
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/angular.js"></script>

    <script src="~/Areas/Admin/Scripts/guestAdminApp.js"></script>
    <script src="~/Areas/Admin/Scripts/services/hubProxyService.js"></script>
    <script src="~/Areas/Admin/Scripts/filters/getByIdFilter.js"></script>
    <script src="~/Areas/Admin/Scripts/services/guestFilterService.js"></script>
    <script src="~/Areas/Admin/Scripts/controllers/guestAdminCtrl.js"></script>
}
