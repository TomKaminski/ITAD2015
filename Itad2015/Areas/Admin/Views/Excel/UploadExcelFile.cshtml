@model Itad2015.Areas.Admin.ViewModels.ExcelGetDataViewModel

@{
    ViewBag.Title = "UploadExcelFile";
}
<style>
    .bg-green {
        background-color: #3c763d;
    }
</style>

<div ng-app="excelAdminApp">
    <div ng-controller="excelAdminCtrl as ctrl" ng-init="ctrl.init('@Model.WorkSheetNumber','@Model.EmailPosition','@Model.NamePosition','@Model.LastNamePosition','@Model.FileName','@Model.HasHeader.ToString()')">
        <h3 class="text-center">{{ctrl.sentEmailCount}}/{{ctrl.data.length}}</h3>
        <button class="btn btn-success" ng-class="{'disabled':ctrl.sendBtnClicked==true}" ng-click="ctrl.inviteAll()">Wyślij emaile do wszystkich</button>
        <table class="table">
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Email
                </th>
            </tr>
            <tr ng-repeat="item in ctrl.data" ng-class="{'bg-green': item.EmailSent==true}">
                <td>
                    <div>{{item.Name}}</div>
                </td>
                <td>
                    <div>{{item.LastName}}</div>
                </td>
                <td>
                    <div>{{item.Email}}</div>
                </td>
            </tr>
        </table>

    </div>
</div>


@section Scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>

    @*Auto generated by signalR, nie usuwać*@
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Areas/Admin/Scripts/excelAdminApp.js"></script>
    <script src="~/Areas/Admin/Scripts/services/hubProxyService.js"></script>
    <script src="~/Areas/Admin/Scripts/filters/getByEmailFilter.js"></script>
    <script src="~/Areas/Admin/Scripts/controllers/excelAdminCtrl.js"></script>
}
