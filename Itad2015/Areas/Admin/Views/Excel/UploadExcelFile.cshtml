@model Itad2015.Areas.Admin.ViewModels.ExcelGetDataViewModel

@{
    ViewBag.Title = "UploadExcelFile";
}
<style>
    .color-green {
        color: #3c763d;
    }
</style>

<div ng-app="adminApp">
    <div ng-controller="excelAdminCtrl as ctrl" ng-init="ctrl.init('@Model.WorkSheetNumber','@Model.EmailPosition','@Model.NamePosition','@Model.LastNamePosition','@Model.FileName','@Model.HasHeader.ToString()')">
        <h3 class="text-center">Wysłane z listy: {{ctrl.sentEmailCount}}/{{ctrl.data.length}}</h3>

        <div class="col-xs-4 col-xs-offset-4" style="margin-bottom: 20px">
            <button class="btn btn-success col-xs-12" ng-class="{'disabled':(ctrl.sendBtnClicked==true || ctrl.sentEmailCount==ctrl.data.length)}" ng-click="ctrl.inviteAll()">Wyślij emaile do wszystkich</button>
        </div>

        <table class="table table-striped">
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Email
                </th>
                <th>Wysłane</th>
            </tr>
            <tr ng-repeat="item in ctrl.data" ng-class="{'color-green':item.EmailSent==true}">
                <td>
                    <div>{{item.Name}}</div>
                </td>
                <td>
                    <div>{{item.LastName}}</div>
                </td>
                <td>
                    <div>{{item.Email}}</div>
                </td>
                <td>
                    <span ng-show="item.EmailSent==true">&#10004;</span>
                </td>
            </tr>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>

    @*Auto generated by signalR, nie usuwać*@
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Areas/Admin/Scripts/adminApp.js"></script>
    <script src="~/Areas/Admin/Scripts/services/hubProxyService.js"></script>
    <script src="~/Areas/Admin/Scripts/filters/getByEmailFilter.js"></script>
    <script src="~/Areas/Admin/Scripts/controllers/excelAdminCtrl.js"></script>
}
