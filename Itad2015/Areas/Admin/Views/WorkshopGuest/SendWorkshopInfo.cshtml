
@{
    ViewBag.Title = "SendWorkshopInfo";
}

<style>
    .color-green {
        color: #3c763d;
    }
</style>

<div ng-app="adminApp">
    <div ng-controller="sendWorkshopInfoCtrl as ctrl" ng-init="ctrl.init()">
        <div class="row">
            @Html.Partial("_MenuPartial")
            <div class="col-sm-3">
                <div class="row" style="margin-top: 30px">
                    <button class="btn btn-success col-xs-12" ng-click="ctrl.sendWorkshopInfoToAll()" ng-show="ctrl.emailInProgress == false">Wyślij kody do 20 osób</button>
                    <button class="btn btn-default col-xs-12" ng-click="ctrl.init()" style="margin-top: 5px">Odśwież listę</button>
                </div>
            </div>
        </div>

        <table class="table table-striped">
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Email
                </th>
                <th>Info wysłane?</th>
            </tr>
            <tr ng-repeat="item in ctrl.guestsList" ng-class="{'color-green': item.AgendaEmailSent==true}">
                <td>
                    <div>{{item.FirstName}}</div>
                </td>
                <td>
                    <div>{{item.LastName}}</div>
                </td>
                <td>
                    <div>{{item.Email}}</div>
                </td>
                <td>
                    <span ng-show="item.AgendaEmailSent==true">Tak &#10004;</span>
                    <span ng-show="item.AgendaEmailSent==false">Nie &#10006;</span>

                </td>
            </tr>
        </table>
        @Html.Partial("_PaginationPartial")
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    @*Auto generated by signalR, nie usuwać*@
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Areas/Admin/Scripts/adminApp.js"></script>
    <script src="~/Areas/Admin/Scripts/services/appEmailService.js"></script>
    <script src="~/Areas/Admin/Scripts/services/hubProxyService.js"></script>
    <script src="~/Areas/Admin/Scripts/filters/getByEmailFilter.js"></script>
    <script src="~/Areas/Admin/Scripts/filters/getByIdFilter.js"></script>
    <script src="~/Areas/Admin/Scripts/services/guestFilterService.js"></script>
    <script src="~/Areas/Admin/Scripts/controllers/baseGuestController.js"></script>
    <script src="~/Areas/Admin/Scripts/controllers/sendWorkshopInfoCtrl.js"></script>
}






