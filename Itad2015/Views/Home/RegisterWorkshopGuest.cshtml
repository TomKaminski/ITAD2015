@model Itad2015.ViewModels.RegisterWorkshopGuestViewModel

@using (Html.BeginForm("Register", "WorkshopGuest", FormMethod.Post, new {id="RegisterWorkshopForm"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Size, new { id = "sizeInput" })
    <div id="inputStage">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control itad-required-input", placeholder = "Imię" })
                    @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "validation-itad" })
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control itad-required-input", placeholder = "Nazwisko" })
                    @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "validation-itad" })
                </div>
            </div>
        </div>

        <div class="row margin-botom-20">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control itad-required-input", placeholder = "Adres email" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validation-itad" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control itad-required-input", placeholder = "Nazwa szkoły" })
                    @Html.ValidationMessageFor(x => x.SchoolName, null, new { @class = "validation-itad" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextAreaFor(x => x.Info, new { @class = "form-control", placeholder = "Skąd dowiedziałeś się o konferencji IT Academic Day" })
                </div>
            </div>
        </div>
    </div>
    <div id="shirtTypeStage">
        <p class="text-center">Wybierz typ i rozmiar koszulki:</p>
        <div id="TShirtType" class="row margin-botom-20 ">
            <div class="col-xs-6 col-sm-4 col-sm-offset-2">
                <div class="itad-girl pull-right itad-gender"></div>
            </div>
            <div class="col-xs-6 col-sm-4">
                <div class="itad-guy itad-gender"></div>
            </div>
        </div>
    </div>
    <div class="row margin-botom-20 size-options" id="shirtSizeStageFemale">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <div class="col-xs-6 col-sm-2 col-sm-offset-1"><div class="itad-shirt itad-shirt-s" data-size-code="1"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-m" data-size-code="2"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-l" data-size-code="3"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-xl" data-size-code="4"></div></div>
            <div class="col-xs-12 col-sm-2"><div class="itad-shirt itad-shirt-xxl" data-size-code="5"></div></div>
        </div>
    </div>
    <div class="row margin-botom-20 size-options" id="shirtSizeStageMale">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <div class="col-xs-6 col-sm-2 col-sm-offset-1"><div class="itad-shirt itad-shirt-s" data-size-code="6"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-m" data-size-code="7"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-l" data-size-code="8"></div></div>
            <div class="col-xs-6 col-sm-2"><div class="itad-shirt itad-shirt-xl" data-size-code="9"></div></div>
            <div class="col-xs-12 col-sm-2"><div class="itad-shirt itad-shirt-xxl" data-size-code="10"></div></div>
        </div>
    </div>

        <div id="registerBtnStage">
            <div class="checkbox margin-botom-20">
                <label><input type="checkbox" name="Accepted">Wyrażam zgodę na przetwarzanie moich danych osobowych dla potrzeb niezbędnych do finalizacji procesu rejestracji na konferencje IT Academic Day w Bielsku-Białej (zgodnie z Ustawą z dnia 29.08.1997 roku o Ochronie Danych Osobowych; tekst jednolity: Dz. U. z 2002r. Nr 101, poz. 926 ze zm.).</label>
            </div>
            <a class="btn btn-primary btn-itad col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 disabled">
                REJESTRUJ
            </a>
        </div>
}